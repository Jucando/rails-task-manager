<div class="task-add-form">
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_area :details, size: "60x12", class: "form-control" %>
    </div>

    <% if @task.new_record?() == false  %>
      <div class="form-check mb-2 mr-sm-2">
        <%= f.check_box :completed, class: "form-check-input"%>
        <%= f.label :completed, class: "form-check-label" %>
      </div>
    <% end %>

    <%= f.submit class: "btn btn-secondary form-control" %>
  <% end %>
</div>
